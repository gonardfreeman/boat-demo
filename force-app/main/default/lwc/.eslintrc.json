{
	"extends": ["@salesforce/eslint-config-lwc/recommended"],
	"overrides": [
		{
			"files": ["*.test.js"],
			"rules": {
				"@lwc/lwc/no-unexpected-wire-adapter-usages": "off"
			},
			"env": {
				"node": true
			}
		}
	],
	"rules": {
		"$lwc:render-mode": "off",
		"quotes": "double",
		"no-case-declarations": ["off"],
		"no-alert": "off",
		"@lwc/lwc/no-async-operation": "off",
		"guard-for-in": "off",
		"@lwc/lwc/no-inner-html": "off"
	}
}
